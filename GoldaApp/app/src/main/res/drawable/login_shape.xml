<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2b2727" />
            <corners android:radius="25dp" />
        </shape>
    </item>

    <item android:top="2px"
        android:left="2px"
        android:bottom="2px"
        android:right="2px">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#3b3535"
                android:startColor="#3b3535" />
            <padding
                android:bottom="3dp"
                android:left="5dp"
                android:right="5dp"
                android:top="3dp" />
            <corners android:radius="25dp" />
        </shape>

    </item>

</layer-list>