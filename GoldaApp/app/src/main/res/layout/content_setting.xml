<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/me"
                    android:layout_marginLeft="16.0dip"/>

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="admin"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="20.0dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="16dp"
                android:orientation="vertical">
                <LinearLayout style="@style/common_horizontal_division_line_style" />

                <LinearLayout
                    android:id="@+id/work_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:layout_weight="1"
                        android:text="工作统计"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/right"/>
                </LinearLayout>

                <LinearLayout style="@style/common_horizontal_division_line_style" />

                <LinearLayout
                    android:id="@+id/map_native"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:layout_weight="1"
                        android:text="地图离线"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/right"/>
                </LinearLayout>

                <LinearLayout style="@style/common_horizontal_division_line_style" />

                <LinearLayout
                    android:id="@+id/local_space"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="定位频率"
                        android:textSize="16sp" />
                  <TextView
                      android:id="@+id/tv_local_space"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="默认"
                      android:layout_marginRight="16dp"
                      android:gravity="center"/>
                </LinearLayout>

                <LinearLayout style="@style/common_horizontal_division_line_style" />

                <LinearLayout
                    android:id="@+id/refresh_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="刷新距离"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_refresh_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="默认"
                        android:layout_marginRight="16dp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout style="@style/common_horizontal_division_line_style" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="8dp">
                <LinearLayout style="@style/common_horizontal_division_line_style" />

                <LinearLayout
                    android:id="@+id/soft_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="软件说明"
                        android:textSize="16sp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/right"/>
                </LinearLayout>
                <LinearLayout style="@style/common_horizontal_division_line_style" />
                <LinearLayout
                    android:id="@+id/open_web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="访问官网"
                        android:textSize="16sp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/right"/>
                </LinearLayout>
                <LinearLayout style="@style/common_horizontal_division_line_style" />
                <LinearLayout
                    android:id="@+id/login_out"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:background="@color/orange"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="退出登录"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>